<div class="pages">
  <div class="container">
    <div class="recipe-form">
      <div class="form-banner">
          <h1>Add a new recipe</h1>
      </div>
      <% if !current_user%>
        <div class="log-in-banner">
          <p>Please note that unless you log in, your recipe won't be saved in your Cookbook  and you can't modify the recipe.</p>
          <%= link_to "Log in", new_user_session_path, class:"btn btn-form btn-green" %>
          <p>Not a member yet?
        <%= link_to "Sign up", new_user_registration_path, class: "btn-form btn-blue"  %></p>
        </div>
      <% end %>

      <%= render 'form' %>

      <br>
    </div>
  </div>
</div>

