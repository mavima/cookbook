<div class="container">
<div class="banner">
    <h1>Add a new recipe</h1>
</div>
    <%= simple_form_for (@recipe) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
    </div>
    <div class="form-actions">
      <%= f.submit %>
    </div>
    <% end %>
    <br>

<h4><%= link_to "Home", recipes_path, class: "btn btn-primary" %></h4>
</div>
