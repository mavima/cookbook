                  <li>Copyright &copy; 2022 Recipeper</li>
                  <li>Maria Manninen, Luxembourg</li>
                </div>
            </ul>

        </div>
      <% end %>
    </header>
  </nav>
</div>
<%# end %>

<script>
  const showMenu = () => {
    const menu = document.getElementById("menu");
    menu.hidden = false
  }

  setTimeout(showMenu, 100);

