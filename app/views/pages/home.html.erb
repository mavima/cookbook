<div class="pages">
  <div class="home-container">
    <div class="home-content">
      <h1>Recipeper</h1>

        <%= form_tag recipes_path, method: :get, url: recipes_path do %>
          <%= text_field_tag :query,
            params[:query],
            placeholder: "Find a recipe",
            class: "input-box"
          %>
          <%= submit_tag "Search", class: "btn-home" %>
        <% end %>
    </div>
  </div>
</div>
