<div class="container">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn-form btn-green" %>
    </div>
  <% end %>
 
    <br>
  <p>Not a member yet?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn-form btn-blue"  %></p>
  <br>
  <%= link_to "Forgot your password?   ", new_password_path(resource_name), class: "forgot-password"  %>
  <%= link_to "Change it", new_password_path(resource_name), class: "btn-form btn-blue"  %>
  <br>

  <%#= render "devise/shared/links" %>
  <%= link_to :back do%>
    <button class="btn-back"><i class="fas fa-backward"></i></button>
  <% end %>
</div>
